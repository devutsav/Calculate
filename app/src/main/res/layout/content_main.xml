<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="30">
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/textViewInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="right"
            android:gravity="right"
            android:padding="20dp"
            android:fontFamily="Laconic"
            android:background="#FFFFFF"
            android:text="" />

        <TextView
            android:id="@+id/textViewResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="20dp"
            android:elevation="2dp"
            android:text="0"
            android:gravity="right"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="#FFFFFF"

        >

        <Button
            android:id="@+id/one"
            android:layout_width="65dp"
            android:layout_height="55dp"
            android:layout_gravity="left"
            android:text="1"
            />
        <Button
            android:id="@+id/b2"
            android:layout_width="65dp"
            android:layout_height="55dp"
            android:layout_gravity="left"
            android:text="2"
            />
        <Button
            android:id="@+id/b3"
            android:layout_width="65dp"
            android:layout_height="55dp"
            android:layout_gravity="left"
            android:text="3"
            />
        <Button
            android:id="@+id/bplus"
            android:layout_width="65dp"
            android:layout_height="55dp"
            android:layout_gravity="left"
            android:text="+"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        >

        <Button
            android:id="@+id/b4"
            android:layout_width="65dp"
            android:layout_height="55dp"
            android:layout_gravity="left"
            android:text="4"
            />
        <Button
            android:id="@+id/b5"
            android:layout_width="65dp"
            android:layout_height="55dp"
            android:layout_gravity="left"
            android:text="5"
            />
        <Button
            android:id="@+id/b6"
            android:layout_width="65dp"
            android:layout_height="55dp"
            android:layout_gravity="left"
            android:text="6"
            />
        <Button
            android:id="@+id/bminus"
            android:layout_width="65dp"
            android:layout_height="55dp"
            android:layout_gravity="left"
            android:text="-"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="#FFFFFF">

        <Button
            android:id="@+id/b7"
            android:layout_width="65dp"
            android:layout_height="55dp"
            android:layout_gravity="left"
            android:text="7"
            />
        <Button
            android:id="@+id/b8"
            android:layout_width="65dp"
            android:layout_height="55dp"
            android:layout_gravity="left"
            android:text="8"
            />
        <Button
            android:id="@+id/b9"
            android:layout_width="65dp"
            android:layout_height="55dp"
            android:layout_gravity="left"
            android:text="9"
            />
        <Button
            android:id="@+id/bmult"
            android:layout_width="65dp"
            android:layout_height="55dp"
            android:layout_gravity="left"
            android:text="*"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        >

        <Button
            android:id="@+id/bClear"
            android:layout_width="65dp"
            android:layout_height="55dp"
            android:layout_gravity="left"
            android:text="CE"
            />
        <Button
            android:id="@+id/b0"
            android:layout_width="65dp"
            android:layout_height="55dp"
            android:layout_gravity="left"
            android:text="0"
            />
        <Button
            android:id="@+id/bdot"
            android:layout_width="65dp"
            android:layout_height="55dp"
            android:layout_gravity="left"
            android:text="."
            />
        <Button
            android:id="@+id/bdiv"
            android:layout_width="65dp"
            android:layout_height="55dp"
            android:layout_gravity="left"
            android:text="/"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        >

        <Button
            android:id="@+id/bequal"
            android:layout_width="260dp"
            android:layout_height="55dp"
            android:layout_gravity="left"
            android:text="Equals"
            />



    </LinearLayout>
        </LinearLayout>

</LinearLayout>